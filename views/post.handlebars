<section class="container">
  <h3 class="post-name">{{post.name}}</h3>
  {{!-- <h4>Opening Hour: {{format_time post.starting_date}}</h4> --}}
  {{!-- <h4>Closing Hour: {{format_time post.ending_date}}</h4> --}}
  {{#if loggedIn}}
  <section class="flex-row justify-center">
   
    <form id="commentForm">

      <label for="name">Name:</label>
      <input type="text" id="name" name="name" placeholder="Your name..">
       
      <label for="comment">Comment:</label>
      <input id="commentInput" name="comment" placeholder="Write something.." style="height:200px"></input>

      <button id ="commentButton" type="submit" class="btn btn-block btn-primary">Submit</button>

    </form>

    {{#each post.comments as |comment|}}
    {{> comment-details}}
    {{/each}}
  </section>
</section>
{{else}}
<a href="/login">You must login first to view this page</a>
{{/if}}
<script src=" ./js/comment.js"></script>